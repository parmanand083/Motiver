<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/video_parent">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <agency.tango.android.avatarview.views.AvatarView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    app:av_border_color="@android:color/white"
                    app:av_border_width="4dp"
                    android:id="@+id/avatar"
                    app:av_text_size_percentage="35">
                </agency.tango.android.avatarview.views.AvatarView>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="roboto-Light"
                    android:id="@+id/talent_name"
                    android:textColor="@color/logo_color"
                    android:textSize="16dp"
                    android:textFontWeight="500"

                    ></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="roboto-Light"
                        android:id="@+id/profession"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp"
                        android:textFontWeight="400"
                        android:text="NA"
                        ></TextView>
                </LinearLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="6dp"
                    android:id="@+id/share"
                    android:src="@drawable/share_final"
                    android:layout_gravity="end"
                    android:minWidth="50dp">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="roboto-Light"
                android:id="@+id/textview"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:padding="3dp"
                ></TextView>

            <ImageView
                android:id="@+id/video_imageView"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/loader_image"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/views"
                     android:text="Views: 200"
                     android:textColor="@color/colorPrimary"
                        ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timestamp"
                    android:text="Views: 200"
                    android:textColor="@color/colorPrimary"
                    ></TextView>


            </LinearLayout>







        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>